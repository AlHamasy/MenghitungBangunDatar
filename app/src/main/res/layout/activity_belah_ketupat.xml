<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    tools:context="com.catatanasad.menghitungbangundatar.BelahKetupatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:layout_weight="1">

        <TextView
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mencari Luas"
            android:textColor="#000"
            android:gravity="center_horizontal"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan diagonal 1"
            android:inputType="numberDecimal"
            android:id="@+id/edt_diagonal_1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan diagonal 2"
            android:inputType="numberDecimal"
            android:id="@+id/edt_diagonal_2"/>

        <Button
            android:id="@+id/btn_hitung_luas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hitung"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/txt_hasil_luas"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimary"
            android:gravity="center_horizontal"/>

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:background="#5c5858"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_weight="1">

        <TextView
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mencari Keliling"
            android:textColor="#000"
            android:gravity="center_horizontal"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan sisi"
            android:inputType="numberDecimal"
            android:id="@+id/edt_sisi"/>

        <Button
            android:id="@+id/btn_hitung_keliling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hitung"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/txt_hasil_keliling"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimary"
            android:gravity="center_horizontal"/>

    </LinearLayout>

</LinearLayout>
